{
  "version": 2,
  "functions": {
    "api/*.php": {
      "runtime": "vercel-php@0.6.0"
    },
    "api/**/*.php": {
      "runtime": "vercel-php@0.6.0"
    }
  },
  "routes": [
    { "src": "/assets/(.*)", "dest": "/api/assets/$1" },
    { "src": "/css/(.*)", "dest": "/api/css/$1" },
    { "src": "/js/(.*)", "dest": "/api/js/$1" },
    { "src": "/(.*)\\.php", "dest": "/api/$1.php" },
    { "src": "/(.*)", "dest": "/api/index.php" }
  ],
  "env": {
    "APP_ENV": "production",
    "APP_DEBUG": "false",
    "APP_URL": "https://laundry-app.vercel.app"
  }
}